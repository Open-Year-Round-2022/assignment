                        <div class="story__name">OYR____10</div>
                    </div>
                    <div class="story">
                        <div class="story__profile"></div>
                        <div class="story__name">OYR____10</div>
                    </div>
                    <div class="story">
                        <div class="story__profile"></div>
                        <div class="story__name">OYR____10</div>
                    </div>
                </div>

                <!-- posts -->
                <div class="posts">
                    <div class="post">
                        <div class="post__header">
                            <div class="post__profile"></div>
                            <div class="post__info">
                                <p class="post__id">OYR__10</p>
                            </div>
                            <div class="post__more"><i class="fas fa-ellipsis-h"></i></div>
                        </div>
                        <div class="post__img"></div>
                        <div class="post__btn">
                            <div class="post__btn--left">
                                <i class="far fa-heart like__btn" data-clicked="0"></i>
                                <i class="far fa-comment post__on"></i>
                                <i class="far fa-paper-plane"></i>
                            </div>
                            <div class="post__btn--right">
                                <i class="far fa-bookmark save__btn" data-clicked="0"></i>
                            </div>
                        </div>
                        <div class="post__like">좋아요 46개</div>
                        <div class="post__content">
                            <span class="post__content--id">OYR__10</span> 안녕하세요:)
                        </div>
                        <div class="post__time">49분전</div>
                        <div class="post__comments">
                            <i class="far fa-smile"></i>
                            <input type="text" class="comments__input" placeholder="댓글 달기...">
                            <button class="comments__btn">게시</button>
                        </div>
                    </div>

                    <div class="post">
                        <div class="post__header">
                            <div class="post__profile"></div>
                            <div class="post__info">
                                <p class="post__id">OYR__10</p>
                            </div>
                            <div class="post__more"><i class="fas fa-ellipsis-h"></i></div>
                        </div>
                        <div class="post__img"></div>
                        <div class="post__btn">
                            <div class="post__btn--left">
                                <i class="far fa-heart"></i>
