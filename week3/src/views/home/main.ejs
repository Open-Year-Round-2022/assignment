                        <div class="post__time">49분전</div>
                        <div class="post__comments">
                            <i class="far fa-smile"></i>
                            <input type="text" class="comments__input" placeholder="댓글 달기...">
                            <button class="comments__btn">게시</button>
                        </div>
                    </div>

                </div>
            </div>

            <!-- user & recommended-->
            <div class="main__right">
                <div class="right__wrapper">
                    <div class="user">
                        <div class="user__profile"></div>
                        <div class="user__info">
                            <p class="info__id">OYR__10</p>
                            <p class="info__name">김김김</p>
                        </div>
                        <div class="user__change">전환</div>
                    </div>
                    <div class="recommend">
                        <div class="reco__friends">
                            <div class="reco__header">
                                <div class="reco__title">
                                    회원님을 위한 추천
                                </div>
                                <div class="reco__total">모두 보기</div>
                            </div>
                            <div class="friends">
                                <div class="friend">
                                    <div class="friend__profile"></div>
                                    <div class="friend__info">
                                        <p class="info__id">OYR__10</p>
