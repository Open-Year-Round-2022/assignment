<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram</title>
    <script src="https://kit.fontawesome.com/d7b81d931d.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <script src="/js/home/main.js" defer></script>
</head>

<body>
    <!-- header -->
    <header class="main__header">
        <div class="header__wrapper">
            <h2 class="header__title">Instagram</h2>
            <div class="header__search">
                <input type="text" id="search" placeholder="검색">
            </div>
            <div class="header__icons">
                <i class="fas fa-home"></i>
                <i class="far fa-paper-plane"></i>
                <i class="far fa-plus-square"></i>
                <i class="far fa-compass"></i>
                <i class="far fa-heart"></i>
                <i class="fas fa-user"></i>
            </div>
        </div>
    </header>

    <section class="main">
        <div class="main__wrapper">
            <!-- stories & posts -->
            <div class="main__left">

                <!-- stories -->
                <div class="stories">
                    <div class="story">
                        <div class="story__profile"></div>
                        <div class="story__name">OYR____10</div>
                    </div>
                    <div class="story">
